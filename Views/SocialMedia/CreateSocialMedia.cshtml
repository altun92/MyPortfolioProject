@model MyPortfolioProject.Models.SocialMedia
@{
    ViewBag.Title = "CreateSocialMedia";
    Layout = "~/Views/Admin/Index.cshtml";
}



<h2 class="mb-4">Yeni Sosyal Medya Ekleme Sayfası</h2>

<form method="post">
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", required = "required" })
    <br />

    <label>Link</label>
    @Html.TextBoxFor(x => x.Url, new { @class = "form-control", required = "required" })
    <br />

    <label>İkon</label>
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control", required = "required" })
    <br />

    <button class="btn btn-primary">Sosyal Medya Hesabı Ekle</button>
</form>



