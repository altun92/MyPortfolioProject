@model List<MyPortfolioProject.Models.Internship>
@{
    ViewBag.Title = "InternshipList";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<h2 class="mb-4">Staj Listesi ve İşlemleri</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>İşyeri Adı</th>
        <th>Başlangıç Tarihi</th>
        <th>Bitiş Tarihi</th>
        <th>Pozisyon</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.CompanyName</td>
            <td>@item.StartDate</td>
            <td>@item.EndDate</td>
            <td>@item.Position</td>
            <td>@item.Description</td>
            <td><a href="/Internship/DeleteInternship/@item.InternshipId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Internship/UpdateInternship/@item.InternshipId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Internship/CreateInternship" class="btn btn-success">Yeni Staj Girişi</a>



