@model MyPortfolioProject.Models.Testimonial
@{
    ViewBag.Title = "CreateTestimonial";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Yeni Yorum Ekleme Sayfası</h2>

<form method="post">
    <label>Ad Soyad</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", required = "required" })
    <br />

    <label>Şehir</label>
    @Html.TextBoxFor(x => x.City, new { @class = "form-control", required = "required" })
    <br />

    <label>Görsel Linki</label>
    @Html.TextBoxFor(x => x.Image, new { @class = "form-control", required = "required" })
    <br />

    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control", required = "required" })
    <br />

    <button class="btn btn-primary">Yorum Ekle</button>
</form>



